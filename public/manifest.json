{
  "name": "Ridi Journal",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Ridi Journal",
  "icons": {
    "128": "logo192.png"
  },
  "permissions": ["tabs", "activeTab", "scripting", "alarms"],
  "host_permissions": ["https://ridibooks.com/reading-note/"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": "logo192.png",
    "default_popup": "popup.html",
    "default_title": "Ridi Bookmark"
  },
  "options_page": "index.html",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "all_frames": true,
      "js": ["script.js"]
    }
  ]
}
